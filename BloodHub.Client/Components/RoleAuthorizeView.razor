@using Microsoft.AspNetCore.Components.Authorization

<AuthorizeView Roles="@Roles">
    <Authorized>
        @ChildContent
    </Authorized>
    <NotAuthorized>
        <NotAuthorizedView />
    </NotAuthorized>
</AuthorizeView>

@code {
    [Parameter, EditorRequired] public string Roles { get; set; } = string.Empty;
    [Parameter] public RenderFragment? ChildContent { get; set; }
}
