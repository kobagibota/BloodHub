@page "/nursings"
@attribute [Authorize]

@using BloodHub.Client.Components
@using BloodHub.Client.Services
@using BloodHub.Shared.Entities
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.Authorization

@inject NursingService NursingService
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@inject NavigationManager Navigation

<PageTitle>Danh sách điều dưỡng</PageTitle>

<RoleAuthorizeView Roles="Manager,Admin,User"> 
    <MudPaper Class="m-2" Elevation="3" >
        <!-- Table Section to Display Nursings -->
        <MudTable Items="nursings" FixedHeader="true" Dense="@dense" Striped="true" Hover="true" Bordered="true" Loading="isLoading"
                  Filter="new Func<Nursing,bool>(FilterFunc)" @bind-SelectedItem="selectedItem" HorizontalScrollbar="true" >
            <ToolBarContent>
                <MudText Typo="Typo.h4" Class="mb-2">Danh sách điều dưỡng</MudText>

                <MudSpacer />

                <!-- Trường tìm kiếm -->
                <MudTextField @bind-Value="searchString" Placeholder="Tìm kiếm"
                              Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search"
                              AdornmentColor="Color.Secondary" IconSize="Size.Medium"
                              Class="mt-0" Style="margin-right: 12px;" Disabled="@isLoading" />

                <!-- Nút Thêm mới -->
                <MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Add"
                           Color="Color.Info" OnClick="@(() => OpenNursingDialog(null))"
                           Size="Size.Medium" Disabled="@isLoading">
                    Thêm mới
                </MudButton>            
            </ToolBarContent>

            <ColGroup>
                <col style="width: 70%; min-width:150px;" />
                <col style="width: 20%; min-width:60px;" />
                <col style="width: 10%; min-width:30px;" />
            </ColGroup>

            <!-- Table Header -->
            <HeaderContent>
                <MudTh><MudTableSortLabel SortBy="new Func<Nursing, object>(x => x.NursingName)">Tên điều dưỡng</MudTableSortLabel></MudTh>
                <MudTh Style="text-align:center"><MudTableSortLabel SortBy="new Func<Nursing, object>(x => x.IsHide)">Trạng thái</MudTableSortLabel></MudTh>
                <MudTh Style="text-align:center">Hành động</MudTh>
            </HeaderContent>

            <!-- Table Rows -->
            <RowTemplate>
                <!-- Nursing Name Column -->
                <MudTd DataLabel="Tên điều dưỡng">@context.NursingName</MudTd>
                <!-- Status Column with Conditional Display -->
                <MudTd Style="text-align:center" DataLabel="Trạng thái">
                    @if (context.IsHide)
                    {
                        <MudChip T="string" Variant="Variant.Text" Color="Color.Error">Ẩn</MudChip>
                    }
                    else
                    {
                        <MudChip T="string" Variant="Variant.Text" Color="Color.Success">Hoạt động</MudChip>
                    }
                </MudTd>
                <!-- Action Buttons Column -->
                <MudTd Style="text-align:center" DataLabel="Hành động">
                    <!-- Edit Button -->
                    <AuthorizeView> 
                        <Authorized Context="authContext">
                            <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" Size="Size.Small" OnClick="@(() => OpenNursingDialog(context))" 
                                            Disabled="@(authContext.User.IsInRole("User"))">Sửa</MudIconButton>
                        </Authorized>
                    </AuthorizeView>

                    <!-- Delete Button -->
                    <AuthorizeView Roles="Manager,Admin"> 
                        <Authorized Context="authContext">
                            <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Size="Size.Small" OnClick="@(() => ConfirmDeleteNursing(context.Id, context.NursingName))">Xóa</MudIconButton>
                        </Authorized>
                    </AuthorizeView>
                </MudTd>
            </RowTemplate>

            <!-- No Record -->
            <NoRecordsContent>
                <MudPaper Elevation="2" Class="pa-4 text-center">
                    <MudIcon Icon="@Icons.Material.Filled.Info" Color="Color.Info" Size="Size.Large" />
                    <MudText Typo="Typo.h6" Class="mt-2">Không có dữ liệu</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">Hãy kiểm tra lại bộ lọc hoặc thêm dữ liệu mới.</MudText>
                </MudPaper>
            </NoRecordsContent>

            <!-- Loading -->
            <LoadingContent>
                <MudContainer Class="text-center">
                    <MudText Typo="Typo.h6" Class="mt-2">Đang tải dữ liệu...</MudText>
                </MudContainer>
            </LoadingContent>

            <!-- Pagination -->
            <PagerContent>
                <MudTablePager PageSizeOptions="new int[] { 10, 25, 50, 100, int.MaxValue }" RowsPerPageString="Mỗi trang" AllItemsText="Tất cả" />
            </PagerContent>
        </MudTable>
    </MudPaper>
</RoleAuthorizeView>

@code {
    // List of nursings to display in the table
    private List<Nursing> nursings = new List<Nursing>();
    private Nursing selectedItem = new Nursing(); // Currently selected nursing
    private HashSet<Nursing> selectedItems = new HashSet<Nursing>(); // Set of selected items (if multi-selection is enabled)
    private string searchString = ""; // Search string for filtering
    private bool isLoading = true;
    private bool dense = true;

    // Fetch the list of nursings when the component initializes
    protected override async Task OnInitializedAsync()
    {
        await LoadNursings();        
    }

    // Filtering logic for the search functionality
    private bool FilterFunc(Nursing element) => FilterFunc(element, searchString);

    private bool FilterFunc(Nursing element, string searchString)
    {
        if (string.IsNullOrWhiteSpace(searchString))
            return true; // No filter applied
        if (element.NursingName.Contains(searchString, StringComparison.OrdinalIgnoreCase))
            return true; // Match found
        return false; // No match
    }

    // Open the dialog to add or edit a nursing's information
    private async Task OpenNursingDialog(Nursing nursing)
    {
        var parameters = new DialogParameters();
        parameters.Add("Nursing", nursing ?? new Nursing()); // Tạo đối tượng mới nếu nursing là null

        string title = (nursing == null) ? "Thêm mới điều dưỡng" : "Chỉnh thông tin điều dưỡng";
        var dialog = DialogService.Show<NursingDialog>(title, parameters);
        var result = await dialog.Result;

        if (result != null && !result.Canceled)
        {
            await LoadNursings(); // Làm mới danh sách
        }
    }

    // Confirm and delete a nursing
    private async Task ConfirmDeleteNursing(int nursingId, string nursingName)
    {
        var parameters = new DialogParameters
        {
            { "ContentText", $"Bạn có chắc chắn muốn xóa ''{nursingName}'' ra khỏi danh sách không?" }, // Confirmation message
        };

        var dialog = DialogService.Show<ConfirmDialog>("Xác nhận", parameters);
        var result = await dialog.Result;

        if (result?.Canceled == false)
        {
            // Delete the nursing and refresh the list
            var response = await NursingService.DeleteNursing(nursingId);
            if (response.Success)
            {
                await LoadNursings(); // Làm mới danh sách
                Snackbar.Add($"Đã xoá điều dưỡng '{nursingName}' thành công!", Severity.Success);
            }
            else
            {
                await DialogService.ShowMessageBox("Lỗi truy cập", response.Message);
            }
        }
    }

    // Phương thức tải lại danh sách điều dưỡng (tái sử dụng nhiều nơi)
    private async Task LoadNursings()
    {
        try
        {
            isLoading = true;
            var response = await NursingService.GetAllNursings();
            if (response.Success && response.Data != null)
            {
                nursings = response.Data;
            }
            else
            {
                // Hiển thị thông báo lỗi từ API
                await DialogService.ShowMessageBox("Lỗi", response.Message);
            }
        }
        catch (Exception ex)
        { 
            await DialogService.ShowMessageBox("Lỗi", $"Xảy ra lỗi khi tải danh sách điều dưỡng: {ex.Message}");
        }
        finally 
        {
            isLoading = false;
        }
    }
}
